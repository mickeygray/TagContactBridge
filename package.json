{
  "name": "tagcontactbridge",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "cross-env PORT=5000 node server.js",
    "server": "cross-env PORT=5000 nodemon --max-old-space-size=32768 server.js",
    "webhook": "cross-env PORT=4000 node webhook.js",
    "client": "cross-env PORT=3000 npm --max_old_space_size=16384 start --prefix client",
    "clientinstall": "npm install --prefix client",
    "ngrok": "ngrok http 4000",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run webhook\" ",
    "install": "npm install && npm install --prefix client && npm run build --prefix client"
  },
  "author": "",
